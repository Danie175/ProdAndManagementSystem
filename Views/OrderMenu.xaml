<Page x:Class="ProdAndManagementSystem.Views.OrderMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProdAndManagementSystem.Views"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1280"
      Title="Order Management">

    <Page.Resources>
        <!-- Windows 11 inspired styles -->
        <Style x:Key="Win11Button" TargetType="Button">
            <Setter Property="Background" Value="#f0f0f0"/>
            <Setter Property="Foreground" Value="#202020"/>
            <Setter Property="BorderBrush" Value="#e0e0e0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <!--   <Setter Property="CornerRadius" Value="4"/> -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#e9e9e9"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#dadada"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="Win11PrimaryButton" TargetType="Button" BasedOn="{StaticResource Win11Button}">
            <Setter Property="Background" Value="#0078d4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#0078d4"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#106ebe"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#005a9e"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="Win11TextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#ffffff"/>
            <Setter Property="Foreground" Value="#202020"/>
            <Setter Property="BorderBrush" Value="#d1d1d1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="False" 
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#0078d4"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#0078d4"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="Win11ComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#ffffff"/>
            <Setter Property="Foreground" Value="#202020"/>
            <Setter Property="BorderBrush" Value="#d1d1d1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="36"/>
        </Style>

        <Style x:Key="Win11DataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="#ffffff"/>
            <Setter Property="BorderBrush" Value="#d1d1d1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="#ffffff"/>
            <Setter Property="AlternatingRowBackground" Value="#f9f9f9"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#e6e6e6"/>
            <Setter Property="VerticalGridLinesBrush" Value="#e6e6e6"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
        </Style>

        <Style x:Key="Win11DataGridColumnHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#f5f5f5"/>
            <Setter Property="Foreground" Value="#202020"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderBrush" Value="#e6e6e6"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
        </Style>

        <Style x:Key="Win11GroupBox" TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="#d1d1d1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontWeight="SemiBold" FontSize="14" Margin="5,0"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="Win11Label" TargetType="Label">
            <Setter Property="Foreground" Value="#202020"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#f2f2f2" Padding="20,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Order Management" FontSize="22" FontWeight="SemiBold" Foreground="#202020"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="New Order" Margin="10,0" Style="{StaticResource Win11PrimaryButton}"/>
                    <Button Content="Export" Margin="10,0" Style="{StaticResource Win11Button}"/>
                    <Button Content="Print" Margin="10,0" Style="{StaticResource Win11Button}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Filters and Search -->
        <Border Grid.Row="1" Background="White" BorderBrush="#e0e0e0" BorderThickness="0,0,0,1" Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <ComboBox Width="180" Margin="0,0,10,0" Style="{StaticResource Win11ComboBox}"
                              DisplayMemberPath="CUSTOMERNAME" SelectedValuePath="CUSTOMERID"
                              ToolTip="Filter by Customer">
                        <ComboBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel/>
                            </ItemsPanelTemplate>
                        </ComboBox.ItemsPanel>
                    </ComboBox>

                    <ComboBox Width="180" Margin="10,0" Style="{StaticResource Win11ComboBox}"
                              DisplayMemberPath="SITENAME" SelectedValuePath="SITEID"
                              ToolTip="Filter by Site">
                        <ComboBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel/>
                            </ItemsPanelTemplate>
                        </ComboBox.ItemsPanel>
                    </ComboBox>

                    <ComboBox Width="180" Margin="10,0" Style="{StaticResource Win11ComboBox}"
                              DisplayMemberPath="RECIPENAME" SelectedValuePath="ID"
                              ToolTip="Filter by Recipe">
                        <ComboBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel/>
                            </ItemsPanelTemplate>
                        </ComboBox.ItemsPanel>
                    </ComboBox>

                    <DatePicker Width="150" Margin="10,0" ToolTip="From Date" FontSize="14"/>
                    <DatePicker Width="150" Margin="10,0" ToolTip="To Date" FontSize="14"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBox Width="220" Style="{StaticResource Win11TextBox}" Margin="10,0,0,0" ToolTip="Search">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                    <Button Content="Search" Margin="10,0,0,0" Style="{StaticResource Win11PrimaryButton}" Width="80"/>
                    <Button Content="Reset" Margin="10,0,0,0" Style="{StaticResource Win11Button}" Width="80"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Data Grid -->
        <DataGrid Grid.Row="1" Margin="6,57,3,0" Style="{StaticResource Win11DataGrid}"
                  ColumnHeaderStyle="{StaticResource Win11DataGridColumnHeader}" Grid.RowSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Order ID" Binding="{Binding ORDERID}" Width="90"/>
                <DataGridTextColumn Header="Customer" Binding="{Binding CUSTOMERNAME}" Width="160"/>
                <DataGridTextColumn Header="Site" Binding="{Binding SITENAME}" Width="160"/>
                <DataGridTextColumn Header="Recipe" Binding="{Binding RECIPENAME}" Width="140"/>
                <DataGridTextColumn Header="Order Quantity" Binding="{Binding ORDERQUANTITY}" Width="110"/>
                <DataGridTextColumn Header="Completed" Binding="{Binding COMPLETEDQUANTITY}" Width="110"/>
                <DataGridTextColumn Header="Pending" Binding="{Binding PENDINGQUANTITY}" Width="110"/>
                <DataGridTextColumn Header="Created Date" Binding="{Binding CREATEDATE, StringFormat=\{0:dd/MM/yyyy HH:mm\}}" Width="160"/>

                <DataGridTemplateColumn Header="Actions" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="View" Style="{StaticResource Win11Button}" Margin="5,0" Padding="12,4"/>
                                <Button Content="Edit" Style="{StaticResource Win11Button}" Margin="5,0" Padding="12,4"/>
                                <Button Content="Delete" Style="{StaticResource Win11Button}" Margin="5,0" Padding="12,4"/>
                                <Button Content="Batch" Style="{StaticResource Win11PrimaryButton}" Margin="5,0" Padding="12,4" ToolTip="Create Batch"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Pagination -->
        <Border Grid.Row="3" Background="#f2f2f2" Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Showing" VerticalAlignment="Center"/>
                    <ComboBox Width="60" Margin="8,0" SelectedIndex="0" Style="{StaticResource Win11ComboBox}">
                        <ComboBoxItem Content="10"/>
                        <ComboBoxItem Content="25"/>
                        <ComboBoxItem Content="50"/>
                        <ComboBoxItem Content="100"/>
                    </ComboBox>
                    <TextBlock Text="entries" VerticalAlignment="Center"/>
                </StackPanel>

                <TextBlock Grid.Column="1" Text="Showing 1 to 10 of 150 entries" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="Previous" Style="{StaticResource Win11Button}" Width="90" Margin="0,0,10,0"/>
                    <Button Content="Next" Style="{StaticResource Win11PrimaryButton}" Width="90"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Order Detail Flyout/Popup - Will be toggled via code-behind -->
        <Border x:Name="OrderDetailPanel" Grid.RowSpan="4" Background="#80000000" Visibility="Collapsed">
            <Border MaxWidth="800" MaxHeight="700" Background="White" CornerRadius="6" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" BorderBrush="#e0e0e0" BorderThickness="0,0,0,1" Padding="0,0,0,10" Margin="0,0,0,10">
                        <Grid>
                            <TextBlock Text="Order Details" FontSize="18" FontWeight="SemiBold"/>
                            <Button Content="×" HorizontalAlignment="Right" Style="{StaticResource Win11Button}"
                                    Width="36" Height="36" Padding="0" FontSize="20"/>
                        </Grid>
                    </Border>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <GroupBox Header="Order Information" Style="{StaticResource Win11GroupBox}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                                        <Label Content="Order ID" Style="{StaticResource Win11Label}"/>
                                        <TextBox Text="{Binding ORDERID}" Style="{StaticResource Win11TextBox}" IsReadOnly="True"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,10">
                                        <Label Content="Order Quantity" Style="{StaticResource Win11Label}"/>
                                        <TextBox Text="{Binding ORDERQUANTITY}" Style="{StaticResource Win11TextBox}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,10">
                                        <Label Content="Customer" Style="{StaticResource Win11Label}"/>
                                        <ComboBox Style="{StaticResource Win11ComboBox}" DisplayMemberPath="CUSTOMERNAME" SelectedValuePath="CUSTOMERID"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,0,10">
                                        <Label Content="Site" Style="{StaticResource Win11Label}"/>
                                        <ComboBox Style="{StaticResource Win11ComboBox}" DisplayMemberPath="SITENAME" SelectedValuePath="SITEID"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,10">
                                        <Label Content="Recipe" Style="{StaticResource Win11Label}"/>
                                        <ComboBox Style="{StaticResource Win11ComboBox}" DisplayMemberPath="RECIPENAME" SelectedValuePath="ID"/>
                                    </StackPanel>
                                </Grid>
                            </GroupBox>

                            <GroupBox Header="Recipe Details" Style="{StaticResource Win11GroupBox}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Aggregates -->
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Aggregates" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="Material" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Set Point" FontWeight="SemiBold" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="AGG1"/>
                                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding AGG1NAME}" Style="{StaticResource Win11TextBox}" Height="30" Margin="0,0,10,6"/>
                                    <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding AGG1STP}" Style="{StaticResource Win11TextBox}" Height="30" Margin="0,0,0,6"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="AGG2"/>
                                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding AGG2NAME}" Style="{StaticResource Win11TextBox}" Height="30" Margin="0,0,10,6"/>
                                    <TextBox Grid.Row="2" Grid.Column="2" Text="{Binding AGG2STP}" Style="{StaticResource Win11TextBox}" Height="30" Margin="0,0,0,6"/>
                                </Grid>
                            </GroupBox>

                            <GroupBox Header="Cement" Style="{StaticResource Win11GroupBox}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Type" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="Material" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Set Point" FontWeight="SemiBold" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="CEMENT1"/>
                                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding CEMENT1NAME}" Style="{StaticResource Win11TextBox}" Height="30" Margin="0,0,10,6"/>
                                    <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding CEMENT1STP}" Style="{StaticResource Win11TextBox}" Height="30" Margin="0,0,0,6"/>
                                </Grid>
                            </GroupBox>

                            <GroupBox Header="Water" Style="{StaticResource Win11GroupBox}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Type" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="Source" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Set Point" FontWeight="SemiBold" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="WATER1"/>
                                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding WATER1NAME}" Style="{StaticResource Win11TextBox}" Height="30" Margin="0,0,10,6"/>
                                    <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding WATER1STP}" Style="{StaticResource Win11TextBox}" Height="30" Margin="0,0,0,6"/>
                                </Grid>
                            </GroupBox>

                            <GroupBox Header="Admixtures" Style="{StaticResource Win11GroupBox}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Type" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="Material" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Set Point" FontWeight="SemiBold" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="ADMIX1"/>
                                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding ADMIX1NAME}" Style="{StaticResource Win11TextBox}" Height="30" Margin="0,0,10,6"/>
                                    <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding ADMIX1STP}" Style="{StaticResource Win11TextBox}" Height="30" Margin="0,0,0,6"/>
                                </Grid>
                            </GroupBox>
                        </StackPanel>
                    </ScrollViewer>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button Content="Cancel" Style="{StaticResource Win11Button}" Width="100" Margin="0,0,10,0"/>
                        <Button Content="Save" Style="{StaticResource Win11PrimaryButton}" Width="100"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>
    </Grid>
</Page>