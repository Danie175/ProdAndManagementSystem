<Page
    x:Class="ProdAndManagementSystem.Views.BatchManagement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:ProdAndManagementSystem.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:ProdAndManagementSystem.Models"
    mc:Ignorable="d"
    Background="#F9F9F9" Height="784">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Windows 11 Style Button -->
        <Style x:Key="Win11Button" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#106EBE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Windows 11 Style Outline Button -->
        <Style x:Key="Win11OutlineButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#D1D1D1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#E1E1E1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Windows 11 Style Action Button -->
        <Style x:Key="Win11IconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#E1E1E1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Windows 11 Style TextBox -->
        <Style x:Key="Win11TextBox" TargetType="TextBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="#D1D1D1"
                                BorderThickness="1"
                                CornerRadius="4">
                            <Grid>
                                <TextBlock Text="Search batch number or customer name..." 
                                         Margin="12,0,0,0"
                                         VerticalAlignment="Center"
                                         Foreground="#767676"
                                         Visibility="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Text.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                <ScrollViewer x:Name="PART_ContentHost" Margin="5,0,0,0" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#0078D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Windows 11 Style ComboBox -->
        <Style x:Key="Win11ComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="#D1D1D1"
                                    BorderThickness="1"
                                    CornerRadius="4">
                                <Grid>
                                    <ToggleButton x:Name="ToggleButton"
                                                  BorderBrush="Transparent"
                                                  Background="Transparent"
                                                  Focusable="false"
                                                  IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                        <ToggleButton.Template>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="32" />
                                                    </Grid.ColumnDefinitions>
                                                    <ContentPresenter x:Name="ContentSite"
                                                                      Content="{TemplateBinding Content}"
                                                                      ContentTemplate="{TemplateBinding ContentTemplate}"
                                                                      Margin="5,0,0,0"
                                                                      VerticalAlignment="Center" />
                                                    <Path x:Name="Arrow"
                                                          Grid.Column="1"
                                                          Fill="#767676"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"
                                                          Data="M0,0 L8,0 L4,4 z" />
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#F5F5F5"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </ToggleButton.Template>
                                    </ToggleButton>
                                    <ContentPresenter x:Name="ContentSite"
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                      ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Left"
                                                      Margin="12,0,0,0" />
                                    <Popup x:Name="Popup"
                                           Placement="Bottom"
                                           IsOpen="{TemplateBinding IsDropDownOpen}"
                                           AllowsTransparency="True"
                                           Focusable="False"
                                           PopupAnimation="Slide">
                                        <Grid x:Name="DropDown"
                                              MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                              MinWidth="{TemplateBinding ActualWidth}">
                                            <Border x:Name="DropDownBorder"
                                                    Background="White"
                                                    BorderBrush="#D1D1D1"
                                                    BorderThickness="1"
                                                    CornerRadius="0,0,4,4">
                                                <ScrollViewer SnapsToDevicePixels="True">
                                                    <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained" />
                                                </ScrollViewer>
                                            </Border>
                                        </Grid>
                                    </Popup>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#0078D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid Styles -->
        <Style x:Key="Win11DataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#E5E5E5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E5E5E5"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#FBFBFB"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="CanUserReorderColumns" Value="True"/>
            <Setter Property="CanUserResizeColumns" Value="True"/>
            <Setter Property="CanUserSortColumns" Value="True"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="RowHeight" Value="48"/>
            <Style.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#F9F9F9"/>
                    <Setter Property="Foreground" Value="#202020"/>
                    <Setter Property="Padding" Value="12,10"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="BorderBrush" Value="#E5E5E5"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    <Setter Property="Height" Value="42"/>
                </Style>
                <Style TargetType="DataGridRow">
                    <Setter Property="Padding" Value="0,4"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#ECF4FC"/>
                            <Setter Property="BorderBrush" Value="#0078D4"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#F5F5F5"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
                <Style TargetType="DataGridCell">
                    <Setter Property="Padding" Value="12,4"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridCell">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        SnapsToDevicePixels="True">
                                    <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Style.Resources>
        </Style>
    </Page.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Batch Management" 
                       FontSize="28" 
                       FontWeight="SemiBold" 
                       Foreground="#202020"/>
            <TextBlock Text="View and manage production batches" 
                       FontSize="14" 
                       Margin="0,6,0,0"
                       Foreground="#606060"/>
        </StackPanel>

        <!-- Controls -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Search Box -->
            <TextBox Grid.Column="0" 
                     x:Name="SearchTextBox"
                     Style="{StaticResource Win11TextBox}"
                     VerticalAlignment="Center"
                     Margin="0,0,16,0" 
                     TextChanged="SearchTextBox_TextChanged"/>

            <!-- Filter -->
            <ComboBox Grid.Column="1"
                      x:Name="FilterComboBox"
                      Style="{StaticResource Win11ComboBox}"
                      Width="180"
                      Margin="0,0,16,0"
                      SelectedIndex="0"
                      SelectionChanged="FilterComboBox_SelectionChanged">
                <ComboBoxItem Content="All Batches"/>
                <ComboBoxItem Content="Recent Batches"/>
                <ComboBoxItem Content="By Customer"/>
                <ComboBoxItem Content="By Recipe"/>
                <ComboBoxItem Content="By Site"/>
            </ComboBox>

            <!-- Action Buttons -->
            <StackPanel Grid.Column="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Center">
                <Button x:Name="NewBatchBtn" 
                        Content="New Batch" 
                        Style="{StaticResource Win11Button}"
                        Margin="0,0,10,0"
                        Width="120" 
                        Click="NewBatchBtn_Click"/>
                <Button x:Name="ExportDataBtn" 
                        Content="Export Data" 
                        Style="{StaticResource Win11OutlineButton}"
                        Width="120" 
                        Click="ExportDataBtn_Click"/>
            </StackPanel>
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Batch List Grid -->
            <Grid Grid.Column="0" x:Name="BatchListGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Batch DataGrid -->
                <DataGrid x:Name="BatchDataGrid"
                          Grid.Row="0"
                          Style="{StaticResource Win11DataGrid}"
                          SelectionChanged="BatchDataGrid_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Batch #" Binding="{Binding Batchnumber}" Width="90"/>
                        <DataGridTextColumn Header="Quantity" Binding="{Binding Batchquantity}" Width="90"/>
                        <DataGridTextColumn Header="Customer" Binding="{Binding Customername}" Width="180"/>
                        <DataGridTextColumn Header="Site" Binding="{Binding Sitename}" Width="140"/>
                        <DataGridTextColumn Header="Recipe" Binding="{Binding Recipename}" Width="140"/>
                        <DataGridTextColumn Header="Order ID" Binding="{Binding Orderid}" Width="90"/>
                        <DataGridTextColumn Header="Vehicle #" Binding="{Binding Vehiclenumber}" Width="100"/>
                        <DataGridTextColumn Header="Driver" Binding="{Binding Drivername}" Width="140"/>
                        <DataGridTextColumn Header="Created" Binding="{Binding Createdate, StringFormat='{}{0:dd/MM/yyyy}'}" Width="100"/>
                        <DataGridTemplateColumn Header="Actions" Width="130">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Style="{StaticResource Win11IconButton}"
                                                ToolTip="View Details"
                                                Margin="0,0,8,0"
                                                Click="Button_Click_4">
                                            <TextBlock Text="👁️" FontSize="14"/>
                                        </Button>
                                        <Button Style="{StaticResource Win11IconButton}"
                                                ToolTip="Edit Batch"
                                                Margin="0,0,8,0"
                                                Click="Button_Click_3">
                                            <TextBlock Text="✏️" FontSize="14"/>
                                        </Button>
                                        <Button Style="{StaticResource Win11IconButton}"
                                                ToolTip="Delete Batch"
                                                Foreground="#D83B01"
                                                Click="Button_Click_2">
                                            <TextBlock Text="🗑️" FontSize="14"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Pagination -->
                <Grid Grid.Row="1" Margin="0,16,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Items Count -->
                    <TextBlock Grid.Column="0" 
                               x:Name="ItemsCountText"
                               Text="Showing 1-10 of 25 items" 
                               VerticalAlignment="Center"
                               Foreground="#606060"/>

                    <!-- Pagination Controls -->
                    <StackPanel Grid.Column="2" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right">
                        <TextBlock Text="Items per page:" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,8,0"
                                   Foreground="#606060"/>
                        <ComboBox x:Name="PageSizeComboBox"
                                  Width="80"
                                  Height="36"
                                  SelectedIndex="0"
                                  Style="{StaticResource Win11ComboBox}"
                                  Margin="0,0,16,0"
                                  SelectionChanged="PageSizeComboBox_SelectionChanged">
                            <ComboBoxItem Content="10"/>
                            <ComboBoxItem Content="20"/>
                            <ComboBoxItem Content="50"/>
                            <ComboBoxItem Content="100"/>
                        </ComboBox>

                        <Button x:Name="FirstPageBtn"
                                Content="«" 
                                Width="36" 
                                Height="36"
                                Style="{StaticResource Win11OutlineButton}"
                                Margin="0,0,4,0"
                                Click="FirstPageBtn_Click"/>
                        <Button x:Name="PrevPageBtn"
                                Content="‹" 
                                Width="36" 
                                Height="36"
                                Style="{StaticResource Win11OutlineButton}"
                                Margin="0,0,4,0"
                                Click="PrevPageBtn_Click"/>
                        <TextBox x:Name="PageNumberText"
                                 Text="1" 
                                 Width="48" 
                                 Height="36" 
                                 TextAlignment="Center"
                                 Style="{StaticResource Win11TextBox}"
                                 Margin="0,0,4,0"
                                 KeyDown="PageNumberText_KeyDown"/>
                        <TextBlock Text="of" 
                                   VerticalAlignment="Center" 
                                   Margin="4,0"
                                   Foreground="#606060"/>
                        <TextBlock x:Name="TotalPagesText"
                                   Text="5" 
                                   VerticalAlignment="Center" 
                                   Margin="4,0,8,0"
                                   Foreground="#606060"/>
                        <Button x:Name="NextPageBtn"
                                Content="›" 
                                Width="36" 
                                Height="36"
                                Style="{StaticResource Win11OutlineButton}"
                                Margin="0,0,4,0"
                                Click="NextPageBtn_Click"/>
                        <Button x:Name="LastPageBtn"
                                Content="»" 
                                Width="36" 
                                Height="36"
                                Style="{StaticResource Win11OutlineButton}"
                                Click="LastPageBtn_Click_2"/>
                    </StackPanel>
                </Grid>
            </Grid>

            <!-- Batch Details Panel (collapsed by default) -->
            <Border Grid.Column="1" 
                   x:Name="BatchDetailsPanel"
                   Background="White" 
                   BorderBrush="#E5E5E5"
                   BorderThickness="1" 
                   CornerRadius="8"
                   Margin="16,0,0,0"
                   Width="450"
                   Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Detail Header -->
                    <Border Grid.Row="0" 
                          Background="#F9F9F9" 
                          BorderThickness="0,0,0,1"
                          BorderBrush="#E5E5E5"
                          CornerRadius="8,8,0,0">
                        <Grid Margin="20,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Vertical">
                                <TextBlock x:Name="DetailBatchNumber"
                                           Text="Batch #12345" 
                                           FontSize="20" 
                                           FontWeight="SemiBold" 
                                           Foreground="#202020"/>
                                <TextBlock x:Name="DetailCustomerName"
                                           Text="Sample Customer" 
                                           FontSize="14" 
                                           Margin="0,4,0,0" 
                                           Foreground="#606060"/>
                            </StackPanel>

                            <Button Grid.Column="1" 
                                    x:Name="CloseDetailsPanelBtn"
                                    Style="{StaticResource Win11IconButton}" 
                                    Click="CloseDetailsPanelBtn_Click">
                                <TextBlock Text="✕" FontSize="14"/>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Detail Content -->
                    <ScrollViewer Grid.Row="1" Padding="20,16">
                        <StackPanel>
                            <!-- Basic Info -->
                            <StackPanel Margin="0,0,0,24">
                                <TextBlock Text="Batch Information" 
                                           FontSize="16" 
                                           FontWeight="SemiBold" 
                                           Margin="0,0,0,12" 
                                           Foreground="#202020"/>

                                <Grid Margin="0,6,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                               Text="Batch Number:" 
                                               Foreground="#606060"/>
                                    <TextBlock x:Name="DetailBatchNumberValue"
                                               Grid.Column="1" 
                                               Text="12345" 
                                               FontWeight="SemiBold" 
                                               Foreground="#202020"/>
                                </Grid>

                                <Grid Margin="0,6,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                               Text="Batch Quantity:" 
                                               Foreground="#606060"/>
                                    <TextBlock x:Name="DetailQuantityValue"
                                               Grid.Column="1" 
                                               Text="1500 kg" 
                                               FontWeight="SemiBold" 
                                               Foreground="#202020"/>
                                </Grid>

                                <Grid Margin="0,6,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                               Text="Customer:" 
                                               Foreground="#606060"/>
                                    <TextBlock x:Name="DetailCustomerValue"
                                               Grid.Column="1" 
                                               Text="Sample Customer" 
                                               FontWeight="SemiBold" 
                                               Foreground="#202020"/>
                                </Grid>

                                <Grid Margin="0,6,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                               Text="Site Name:" 
                                               Foreground="#606060"/>
                                    <TextBlock x:Name="DetailSiteValue"
                                               Grid.Column="1" 
                                               Text="Main Production" 
                                               FontWeight="SemiBold" 
                                               Foreground="#202020"/>
                                </Grid>

                                <Grid Margin="0,6,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                               Text="Recipe Name:" 
                                               Foreground="#606060"/>
                                    <TextBlock x:Name="DetailRecipeValue"
                                               Grid.Column="1" 
                                               Text="Standard Mix" 
                                               FontWeight="SemiBold" 
                                               Foreground="#202020"/>
                                </Grid>

                                <Grid Margin="0,6,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                               Text="Order ID:" 
                                               Foreground="#606060"/>
                                    <TextBlock x:Name="DetailOrderIdValue"
                                               Grid.Column="1" 
                                               Text="67890" 
                                               FontWeight="SemiBold" 
                                               Foreground="#202020"/>
                                </Grid>

                                <Grid Margin="0,6,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                               Text="Order Quantity:" 
                                               Foreground="#606060"/>
                                    <TextBlock x:Name="DetailOrderQuantityValue"
                                               Grid.Column="1" 
                                               Text="5000 kg" 
                                               FontWeight="SemiBold" 
                                               Foreground="#202020"/>
                                </Grid>

                                <Grid Margin="0,6,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                               Text="Created Date:" 
                                               Foreground="#606060"/>
                                    <TextBlock x:Name="DetailCreatedDateValue"
                                               Grid.Column="1" 
                                               Text="05/01/2025" 
                                               FontWeight="SemiBold" 
                                               Foreground="#202020"/>
                                </Grid>

                                <Grid Margin="0,6,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                               Text="Status:" 
                                               Foreground="#606060"/>
                                    <Border Grid.Column="1" 
                                            Background="#E5F2E5" 
                                            CornerRadius="4" 
                                            Padding="8,4" 
                                            HorizontalAlignment="Left">
                                        <TextBlock x:Name="DetailStatusValue"
                                                   Text="Completed" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="#107C10"/>
                                    </Border>
                                </Grid>
                            </StackPanel>

                            <!-- Delivery Info -->
                            <StackPanel Margin="0,0,0,24">
                                <TextBlock Text="Delivery Information" 
                                           FontSize="16" 
                                           FontWeight="SemiBold" 
                                           Margin="0,0,0,12" 
                                           Foreground="#202020"/>

                                <Grid Margin="0,6,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                               Text="Vehicle Number:" 
                                               Foreground="#606060"/>
                                    <TextBlock x:Name="DetailVehicleNumberValue"
                                               Grid.Column="1" 
                                               Text="TRK-12345" 
                                               FontWeight="SemiBold" 
                                               Foreground="#202020"/>
                                </Grid>

                                <Grid Margin="0,6,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                               Text="Driver Name:" 
                                               Foreground="#606060"/>
                                    <TextBlock x:Name="DetailDriverNameValue"
                                               Grid.Column="1" 
                                               Text="John Smith" 
                                               FontWeight="SemiBold" 
                                               Foreground="#202020"/>
                                </Grid>

                                <Grid Margin="0,6,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                               Text="Delivery Date:" 
                                               Foreground="#606060"/>
                                    <TextBlock x:Name="DetailDeliveryDateValue"
                                               Grid.Column="1" 
                                               Text="05/05/2025" 
                                               FontWeight="SemiBold" 
                                               Foreground="#202020"/>
                                </Grid>

                                <Grid Margin="0,6,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                               Text="Delivery Address:" 
                                               Foreground="#606060"/>
                                    <TextBlock x:Name="DetailDeliveryAddressValue"
                                               Grid.Column="1" 
                                               Text="123 Main Street, City, State" 
                                               FontWeight="SemiBold" 
                                               Foreground="#202020"
                                               TextWrapping="Wrap"/>
                                </Grid>
                            </StackPanel>

                            <!-- Production Details -->
                            <StackPanel Margin="0,0,0,24">
                                <TextBlock Text="Production Details" 
                                           FontSize="16" 
                                           FontWeight="SemiBold" 
                                           Margin="0,0,0,12" 
                                           Foreground="#202020"/>

                                <Grid Margin="0,6,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                               Text="Start Time:" 
                                               Foreground="#606060"/>
                                    <TextBlock x:Name="DetailStartTimeValue"
                                               Grid.Column="1" 
                                               Text="09:15 AM" 
                                               FontWeight="SemiBold" 
                                               Foreground="#202020"/>
                                </Grid>

                                <Grid Margin="0,6,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                               Text="End Time:" 
                                               Foreground="#606060"/>
                                    <TextBlock x:Name="DetailEndTimeValue"
                                               Grid.Column="1" 
                                               Text="11:30 AM" 
                                               FontWeight="SemiBold" 
                                               Foreground="#202020"/>
                                </Grid>

                                <Grid Margin="0,6,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                               Text="Operator:" 
                                               Foreground="#606060"/>
                                    <TextBlock x:Name="DetailOperatorValue"
                                               Grid.Column="1" 
                                               Text="Jane Doe" 
                                               FontWeight="SemiBold" 
                                               Foreground="#202020"/>
                                </Grid>

                                <Grid Margin="0,6,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                               Text="Quality Check:" 
                                               Foreground="#606060"/>
                                    <TextBlock x:Name="DetailQualityCheckValue"
                                               Grid.Column="1" 
                                               Text="Passed" 
                                               FontWeight="SemiBold" 
                                               Foreground="#107C10"/>
                                </Grid>

                                <Grid Margin="0,6,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                               Text="Notes:" 
                                               Foreground="#606060"
                                               VerticalAlignment="Top"/>
                                    <TextBlock x:Name="DetailNotesValue"
                                               Grid.Column="1" 
                                               Text="Standard production process without any anomalies. All quality metrics within acceptable ranges." 
                                               TextWrapping="Wrap"
                                               Foreground="#202020"/>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Actions -->
                    <Border Grid.Row="2" 
                          Background="#F9F9F9" 
                          BorderThickness="0,1,0,0"
                          BorderBrush="#E5E5E5"
                          CornerRadius="0,0,8,8">
                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Right" 
                                  Margin="20,16">
                            <Button x:Name="PrintDetailBtn"
                                    Content="Print Details" 
                                    Style="{StaticResource Win11OutlineButton}"
                                    Width="120" 
                                    Margin="0,0,10,0"
                                    Click="PrintDetailBtn_Click"/>
                            <Button x:Name="EditDetailBtn"
                                    Content="Edit Batch" 
                                    Style="{StaticResource Win11Button}"
                                    Width="120" 
                                    Click="EditDetailBtn_Click"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>