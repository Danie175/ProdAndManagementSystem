                    </Grid>
                </GroupBox>

                <!-- Additional Properties Section -->
                <GroupBox Header="Additional Properties" Style="{StaticResource Win11GroupBox}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,12,0">
                            <Label Content="Slump Value (mm)" Style="{StaticResource Win11Label}"/>
                            <TextBox Style="{StaticResource Win11TextBox}" Margin="0,0,0,12"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                            <Label Content="Strength Class" Style="{StaticResource Win11Label}"/>
