                        </Expander>

                        <!-- Cement 2 -->
                        <Expander Header="Cement 2" Style="{StaticResource Win11Expander}" Grid.Column="1" Margin="6,0,0,6">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,6,0">
                                        <Label Content="Name" Style="{StaticResource Win11Label}"/>
                                        <TextBox x:Name="txtCement2" Style="{StaticResource Win11TextBox}" Margin="0,0,0,8"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="6,0,0,0">
                                        <Label Content="STP Value" Style="{StaticResource Win11Label}"/>
