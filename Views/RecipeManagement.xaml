                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                            <Label Content="Recipe Name" Style="{StaticResource Win11Label}"/>
                            <TextBox x:Name="txtRecipeName" Style="{StaticResource Win11TextBox}" Margin="0,0,0,12"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,12,0"/>

                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="12,0,0,0"/>

                        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
                            <Label Content="Serial Number" Style="{StaticResource Win11Label}"/>
                            <TextBox Style="{StaticResource Win11TextBox}" Margin="0,0,0,12"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Aggregates Section -->
