                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Expander>

                        <!-- Cement 3 -->
                        <Expander Header="Cement 3" Style="{StaticResource Win11Expander}" Grid.Row="1" Grid.Column="0" Margin="0,6,6,0">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,6,0">
                                        <Label Content="Name" Style="{StaticResource Win11Label}"/>
                                        <TextBox x:Name="txtCement3" Style="{StaticResource Win11TextBox}" Margin="0,0,0,8"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="6,0,0,0">
                                        <Label Content="STP Value" Style="{StaticResource Win11Label}"/>
                                        <TextBox x:Name="txtCement3STP" Style="{StaticResource Win11TextBox}" Margin="0,0,0,8"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Expander>

                        <!-- Cement 4 -->
                        <Expander Header="Cement 4" Style="{StaticResource Win11Expander}" Grid.Row="1" Grid.Column="1" Margin="6,6,0,0">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,6,0">
                                        <Label Content="Name" Style="{StaticResource Win11Label}"/>
                                        <TextBox x:Name="txtCement4" Style="{StaticResource Win11TextBox}" Margin="0,0,0,8"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="6,0,0,0">
                                        <Label Content="STP Value" Style="{StaticResource Win11Label}"/>
                                        <TextBox x:Name="txtCement4STP" Style="{StaticResource Win11TextBox}" Margin="0,0,0,8"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Expander>
                    </Grid>
                </GroupBox>

                <!-- Water Section -->
                <GroupBox Header="Water" Style="{StaticResource Win11GroupBox}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Water 1 -->
                        <Expander Header="Water 1" Style="{StaticResource Win11Expander}" Grid.Column="0" Margin="0,0,6,0" IsExpanded="True">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,6,0">
                                        <Label Content="Name" Style="{StaticResource Win11Label}"/>
                                        <TextBox x:Name="txtWater1" Style="{StaticResource Win11TextBox}" Margin="0,0,0,8"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="6,0,0,0">
                                        <Label Content="STP Value" Style="{StaticResource Win11Label}"/>
                                        <TextBox x:Name="txtWater1STP" Style="{StaticResource Win11TextBox}" Margin="0,0,0,8"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Expander>

                        <!-- Water 2 -->
                        <Expander Header="Water 2" Style="{StaticResource Win11Expander}" Grid.Column="1" Margin="6,0,0,0">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,6,0">
                                        <Label Content="Name" Style="{StaticResource Win11Label}"/>
                                        <TextBox x:Name="txtWater2" Style="{StaticResource Win11TextBox}" Margin="0,0,0,8"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="6,0,0,0">
                                        <Label Content="STP Value" Style="{StaticResource Win11Label}"/>
                                        <TextBox x:Name="txtWater2STP" Style="{StaticResource Win11TextBox}" Margin="0,0,0,8"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Expander>
                    </Grid>
                </GroupBox>

                <!-- Admixtures Section -->
                <GroupBox Header="Admixtures" Style="{StaticResource Win11GroupBox}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Admix 1 -->
                        <Expander Header="Admixture 1" Style="{StaticResource Win11Expander}" Grid.Column="0" Margin="0,0,6,6" IsExpanded="True">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,6,0">
                                        <Label Content="Name" Style="{StaticResource Win11Label}"/>
                                        <TextBox x:Name="txtAdmix1" Style="{StaticResource Win11TextBox}" Margin="0,0,0,8"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="6,0,0,0">
                                        <Label Content="STP Value" Style="{StaticResource Win11Label}"/>
                                        <TextBox x:Name="txtAdmix1STP" Style="{StaticResource Win11TextBox}" Margin="0,0,0,8"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Expander>

                        <!-- Admix 2 -->
                        <Expander Header="Admixture 2" Style="{StaticResource Win11Expander}" Grid.Column="1" Margin="6,0,0,6">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,6,0">
                                        <Label Content="Name" Style="{StaticResource Win11Label}"/>
                                        <TextBox x:Name="txtAdmix2" Style="{StaticResource Win11TextBox}" Margin="0,0,0,8"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="6,0,0,0">
                                        <Label Content="STP Value" Style="{StaticResource Win11Label}"/>
                                        <TextBox x:Name="txtAdmix2STP" Style="{StaticResource Win11TextBox}" Margin="0,0,0,8"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Expander>

                        <!-- Admix 3 -->
                        <Expander Header="Admixture 3" Style="{StaticResource Win11Expander}" Grid.Row="1" Grid.Column="0" Margin="0,6,6,0">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,6,0">
                                        <Label Content="Name" Style="{StaticResource Win11Label}"/>
                                        <TextBox x:Name="txtAdmix3" Style="{StaticResource Win11TextBox}" Margin="0,0,0,8"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="6,0,0,0">
                                        <Label Content="STP Value" Style="{StaticResource Win11Label}"/>
                                        <TextBox x:Name="txtAdmix3STP" Style="{StaticResource Win11TextBox}" Margin="0,0,0,8"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Expander>

                        <!-- Admix New -->
                        <Expander Header="New Admixture" Style="{StaticResource Win11Expander}" Grid.Row="1" Grid.Column="1" Margin="6,6,0,0">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,6,0">
                                        <Label Content="Name" Style="{StaticResource Win11Label}"/>
                                        <TextBox x:Name="txtAdmixNew" Style="{StaticResource Win11TextBox}" Margin="0,0,0,8"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="6,0,0,0">
                                        <Label Content="STP Value" Style="{StaticResource Win11Label}"/>
                                        <TextBox x:Name="txtAdmixNewSTP" Style="{StaticResource Win11TextBox}" Margin="0,0,0,8"/>
                                    </StackPanel>
                                </Grid>
