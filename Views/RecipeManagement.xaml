                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Expander>

                        <!-- Aggregate 4 -->
                        <Expander Header="Aggregate 4" Style="{StaticResource Win11Expander}" Grid.Row="1" Grid.Column="1" Margin="6,6,0,0">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
