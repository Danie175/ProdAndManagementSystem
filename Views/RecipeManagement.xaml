                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,12,0">
                            <Label Content="Exposure Class" Style="{StaticResource Win11Label}"/>
                            <ComboBox Style="{StaticResource Win11ComboBox}" Margin="0,0,0,12">
                                <ComboBoxItem Content="X0"/>
                                <ComboBoxItem Content="XC1"/>
                                <ComboBoxItem Content="XC2"/>
                                <ComboBoxItem Content="XC3"/>
                                <ComboBoxItem Content="XC4"/>
                                <ComboBoxItem Content="XD1"/>
                                <ComboBoxItem Content="XD2"/>
                                <ComboBoxItem Content="XD3"/>
                                <ComboBoxItem Content="XS1"/>
                                <ComboBoxItem Content="XS2"/>
                                <ComboBoxItem Content="XS3"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="12,0,0,0">
                            <Label Content="Consistency Class" Style="{StaticResource Win11Label}"/>
                            <ComboBox Style="{StaticResource Win11ComboBox}" Margin="0,0,0,12">
                                <ComboBoxItem Content="S1"/>
                                <ComboBoxItem Content="S2"/>
                                <ComboBoxItem Content="S3"/>
                                <ComboBoxItem Content="S4"/>
                                <ComboBoxItem Content="S5"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Notes Section -->
                <GroupBox Header="Notes" Style="{StaticResource Win11GroupBox}">
                    <StackPanel>
                        <Label Content="Recipe Notes" Style="{StaticResource Win11Label}"/>
                        <TextBox Style="{StaticResource Win11TextBox}" 
                                 AcceptsReturn="True" 
                                 TextWrapping="Wrap" 
                                 Height="100"
                                 VerticalScrollBarVisibility="Auto"
                                 Margin="0,0,0,12"/>
                        
                        <Label Content="Special Instructions" Style="{StaticResource Win11Label}"/>
                        <TextBox Style="{StaticResource Win11TextBox}" 
                                 AcceptsReturn="True" 
                                 TextWrapping="Wrap" 
                                 Height="100"
                                 VerticalScrollBarVisibility="Auto"
                                 Margin="0,0,0,12"/>
                    </StackPanel>
                </GroupBox>

                <!-- Recipe Status Section -->
                <GroupBox Header="Recipe Status" Style="{StaticResource Win11GroupBox}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,12,0">
                            <Label Content="Status" Style="{StaticResource Win11Label}"/>
                            <ComboBox Style="{StaticResource Win11ComboBox}" Margin="0,0,0,12">
                                <ComboBoxItem Content="Draft"/>
                                <ComboBoxItem Content="Under Review"/>
                                <ComboBoxItem Content="Approved"/>
                                <ComboBoxItem Content="Active"/>
                                <ComboBoxItem Content="Archived"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                            <Label Content="Approved By" Style="{StaticResource Win11Label}"/>
                            <TextBox Style="{StaticResource Win11TextBox}" Margin="0,0,0,12"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Action Buttons -->
                <Grid Margin="0,16,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Content="Delete Recipe" Grid.Column="0" HorizontalAlignment="Left" 
                            Width="150" Style="{StaticResource Win11Button}" 
                            Background="#f8d7da" Foreground="#721c24"/>

                    <StackPanel Orientation="Horizontal" Grid.Column="1">
                        <Button Content="Save as Draft" Margin="8,0" Width="150" Style="{StaticResource Win11Button}" Click="btnSaD_Click"/>
                        <Button Content="Save and Approve" Margin="8,0" Width="150" Style="{StaticResource Win11Button}" 
                                Background="#0078d4" Foreground="White" Click="btnSaA_Click"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>