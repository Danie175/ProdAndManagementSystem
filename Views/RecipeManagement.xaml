                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Aggregate 1 -->
                        <Expander Header="Aggregate 1" Style="{StaticResource Win11Expander}" Grid.Column="0" Margin="0,0,6,6" IsExpanded="True">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,6,0">
                                        <Label Content="Name" Style="{StaticResource Win11Label}"/>
                                        <TextBox x:Name="txtAgg1"  Style="{StaticResource Win11TextBox}" Margin="0,0,0,8"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="6,0,0,0">
                                        <Label Content="STP Value" Style="{StaticResource Win11Label}"/>
                                        <TextBox x:Name="txtAgg1STP" Style="{StaticResource Win11TextBox}" Margin="0,0,0,8"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Expander>

                        <!-- Aggregate 2 -->
                        <Expander Header="Aggregate 2" Style="{StaticResource Win11Expander}" Grid.Column="1" Margin="6,0,0,6" IsExpanded="True">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,6,0">
                                        <Label Content="Name" Style="{StaticResource Win11Label}"/>
                                        <TextBox x:Name="txtAgg2" Style="{StaticResource Win11TextBox}" Margin="0,0,0,8"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="6,0,0,0">
                                        <Label Content="STP Value" Style="{StaticResource Win11Label}"/>
                                        <TextBox x:Name="txtAgg2STP" Style="{StaticResource Win11TextBox}" Margin="0,0,0,8"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Expander>

                        <!-- Aggregate 3 -->
                        <Expander Header="Aggregate 3" Style="{StaticResource Win11Expander}" Grid.Row="1" Grid.Column="0" Margin="0,6,6,0">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
