<Window x:Class="ProdAndManagementSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProdAndManagementSystem"
        mc:Ignorable="d"
        Title="Concrete Batching System" Height="800" Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="#f5f5f5">

    <Window.Resources>
        <!-- Windows 11 Button Style -->
        <Style x:Key="Win11ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#202020"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="18,12"/>
            <Setter Property="Margin" Value="8,4"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="8" BorderThickness="{TemplateBinding BorderThickness}" 
                                BorderBrush="{TemplateBinding BorderBrush}" Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal">
                                <ContentPresenter VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#e9eef6" TargetName="border"/>
                                <Setter Property="BorderBrush" Value="#dae3f0" TargetName="border"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#dae3f0" TargetName="border"/>
                            </Trigger>
                            <Trigger Property="Tag" Value="Selected">
                                <Setter Property="Background" Value="#e9eef6" TargetName="border"/>
                                <Setter Property="BorderBrush" Value="#0078d4" TargetName="border"/>
                                <Setter Property="BorderThickness" Value="0,0,0,0" TargetName="border"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Active Navigation Button Style -->
        <Style x:Key="ActiveNavButtonStyle" TargetType="Border">
            <Setter Property="Background" Value="#0078d4"/>
            <Setter Property="Width" Value="3"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="CornerRadius" Value="0,2,2,0"/>
            <Setter Property="Visibility" Value="Collapsed"/>
        </Style>

        <!-- Windows 11 Sidebar Style -->
        <Style x:Key="Win11SidebarStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#e1e1e1"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="CornerRadius" Value="16,0,0,16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#20000000" BlurRadius="6" ShadowDepth="2" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Windows 11 Card Style -->
        <Style x:Key="Win11CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#e8e8e8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#20000000" BlurRadius="10" ShadowDepth="1" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Windows 11 Header Style -->
        <Style x:Key="Win11HeaderStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#e8e8e8"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="CornerRadius" Value="0,14,0,0"/>
        </Style>
        
        <!-- Windows 11 Action Button Style -->
        <Style x:Key="Win11ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0078d4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="6" BorderThickness="{TemplateBinding BorderThickness}" 
                                BorderBrush="{TemplateBinding BorderBrush}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#106ebe" TargetName="border"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#005a9e" TargetName="border"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Windows 11 Icon Button Style -->
        <Style x:Key="Win11IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#505050"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="8" BorderThickness="{TemplateBinding BorderThickness}" 
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#f0f2f5" TargetName="border"/>
                                <Setter Property="BorderBrush" Value="#e0e2e5" TargetName="border"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#e0e2e5" TargetName="border"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar with Fluent Design -->
        <Border Style="{StaticResource Win11SidebarStyle}" Grid.Column="0" Margin="10,10,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- App Logo and Title -->
                <StackPanel Grid.Row="0" Margin="25,25,25,30">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <Border Background="#0078d4" Width="32" Height="32" CornerRadius="8" VerticalAlignment="Center">
                            <TextBlock Text="&#xE9F3;" FontFamily="Segoe MDL2 Assets" FontSize="16" 
                                       Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Concrete Batching" FontSize="20" FontWeight="SemiBold" Foreground="#0078d4" Margin="12,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Text="Management System" FontSize="14" Foreground="#555555" Margin="44,0,0,0"/>
                </StackPanel>

                <!-- Navigation Options -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0,0,5,0">
                    <StackPanel Margin="10,0">
                        <!-- Dashboard Option -->
                        <Grid>
                            <Border x:Name="dashboardIndicator" Style="{StaticResource ActiveNavButtonStyle}" Tag="Dashboard"/>
                            <Button Style="{StaticResource Win11ButtonStyle}" x:Name="btnDashboard" Tag="Dashboard" Click="btnDashboard_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE80F;" FontFamily="Segoe MDL2 Assets" FontSize="16" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                    <TextBlock Text="Dashboard" FontSize="14" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <!-- Customer Option -->
                        <Grid>
                            <Border x:Name="customerIndicator" Style="{StaticResource ActiveNavButtonStyle}" Tag="Customer"/>
                            <Button Style="{StaticResource Win11ButtonStyle}" x:Name="btnCustomer" Tag="Customer" Click="btnCustomer_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE716;" FontFamily="Segoe MDL2 Assets" FontSize="16" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                    <TextBlock Text="Customer Management" FontSize="14" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <!-- Site Option -->
                        <Grid>
                            <Border x:Name="siteIndicator" Style="{StaticResource ActiveNavButtonStyle}" Tag="Site"/>
                            <Button Style="{StaticResource Win11ButtonStyle}" x:Name="btnSite" Tag="Site" Click="btnSite_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE707;" FontFamily="Segoe MDL2 Assets" FontSize="16" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                    <TextBlock Text="Site Management" FontSize="14" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <!-- Vehicle Option -->
                        <Grid>
                            <Border x:Name="vehicleIndicator" Style="{StaticResource ActiveNavButtonStyle}" Tag="Vehicle"/>
                            <Button Style="{StaticResource Win11ButtonStyle}" x:Name="btnVehicle" Tag="Vehicle" Click="btnVehicle_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE804;" FontFamily="Segoe MDL2 Assets" FontSize="16" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                    <TextBlock Text="Transport Management" FontSize="14" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <!-- Material Option -->
                        <Grid>
                            <Border x:Name="materialIndicator" Style="{StaticResource ActiveNavButtonStyle}" Tag="Material"/>
                            <Button Style="{StaticResource Win11ButtonStyle}" x:Name="btnMaterial" Tag="Material" Click="btnMaterial_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE71D;" FontFamily="Segoe MDL2 Assets" FontSize="16" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                    <TextBlock Text="Material Master" FontSize="14" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <!-- Recipe Option -->
                        <Grid>
                            <Border x:Name="recipeIndicator" Style="{StaticResource ActiveNavButtonStyle}" Tag="Recipe"/>
                            <Button Style="{StaticResource Win11ButtonStyle}" x:Name="btnRecipe" Tag="Recipe" Click="btnRecipe_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE9D9;" FontFamily="Segoe MDL2 Assets" FontSize="16" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                    <TextBlock Text="Recipe Management" FontSize="14" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <!-- Supplier Option -->
                        <Grid>
                            <Border x:Name="supplierIndicator" Style="{StaticResource ActiveNavButtonStyle}" Tag="Supplier"/>
                            <Button Style="{StaticResource Win11ButtonStyle}" x:Name="btnSupplier" Tag="Supplier" Click="btnSupplier_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE719;" FontFamily="Segoe MDL2 Assets" FontSize="16" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                    <TextBlock Text="Supplier Management" FontSize="14" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <!-- Order Option -->
                        <Grid>
                            <Border x:Name="orderIndicator" Style="{StaticResource ActiveNavButtonStyle}" Tag="Order"/>
                            <Button Style="{StaticResource Win11ButtonStyle}" x:Name="btnOrder" Tag="Order" Click="btnOrder_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE8A1;" FontFamily="Segoe MDL2 Assets" FontSize="16" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                    <TextBlock Text="Order Management" FontSize="14" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <!-- Batch Option -->
                        <Grid>
                            <Border x:Name="batchIndicator" Style="{StaticResource ActiveNavButtonStyle}" Tag="Batch"/>
                            <Button Style="{StaticResource Win11ButtonStyle}" x:Name="btnBatch" Tag="Batch" Click="btnBatch_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE9F3;" FontFamily="Segoe MDL2 Assets" FontSize="16" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                    <TextBlock Text="Batch Management" FontSize="14" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
                
                <!-- Footer Information -->
                <Border Grid.Row="2" BorderBrush="#e8e8e8" BorderThickness="0,1,0,0" Padding="15,15,15,15">
                    <StackPanel>
                        <TextBlock Text="System Information" FontSize="12" FontWeight="SemiBold" Foreground="#666666"/>
                        <TextBlock Text="© 2025 Concrete Batching Ltd." FontSize="11" Foreground="#888888" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content Area with Windows 11 Mica/Fluent Design -->
        <Border Grid.Column="1" Background="White" CornerRadius="14,0,0,14" Margin="0,10,10,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header Area -->
                <Border Style="{StaticResource Win11HeaderStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="30,0,0,0">
                            <TextBlock x:Name="PageTitle" Text="Dashboard" FontSize="22" FontWeight="SemiBold" Foreground="#202020"/>
                            <TextBlock x:Name="PageDescription" Text="Welcome to your concrete batching management dashboard" 
                                       FontSize="13" Foreground="#666666" Margin="0,4,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,30,0" VerticalAlignment="Center">
                            <!-- Search Box -->
                            <Border Background="#f5f5f7" CornerRadius="8" Width="250" Height="42" Margin="0,0,15,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="&#xE721;" FontFamily="Segoe MDL2 Assets" FontSize="14" 
                                               Foreground="#777777" Margin="15,0,0,0" VerticalAlignment="Center"/>
                                    <TextBox Grid.Column="1" BorderThickness="0" Background="Transparent" 
                                             VerticalAlignment="Center" Margin="10,0,15,0" Padding="0,6"
                                             FontSize="13" Foreground="#555555" Text="Search..."/>
                                </Grid>
                            </Border>

                            <!-- Notification Button -->
                            <Button Style="{StaticResource Win11IconButtonStyle}" Margin="5,0">
                                <TextBlock Text="&#xE7E7;" FontFamily="Segoe MDL2 Assets" FontSize="16"/>
                            </Button>

                            <!-- Settings Button -->
                            <Button Style="{StaticResource Win11IconButtonStyle}" Margin="5,0">
                                <TextBlock Text="&#xE713;" FontFamily="Segoe MDL2 Assets" FontSize="16"/>
                            </Button>

                            <!-- User Profile Button -->
                            <Button Style="{StaticResource Win11IconButtonStyle}" Margin="5,0,0,0">
                                <Border Width="26" Height="26" Background="#0078d4" CornerRadius="13">
                                    <TextBlock Text="&#xE77B;" FontFamily="Segoe MDL2 Assets" FontSize="14" 
                                               Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Content Area -->
                <Grid Grid.Row="1">
                    <Frame x:Name="ContentFrame" NavigationUIVisibility="Hidden" Padding="15" Navigated="ContentFrame_Navigated"/>

                    <!-- Dashboard Default Content (shown when no page is loaded) -->
                    <Border x:Name="DefaultDashboard" Style="{StaticResource Win11CardStyle}" Visibility="Visible" Padding="25">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Welcome to Concrete Batching Management System" 
                                       FontSize="22" FontWeight="SemiBold" Foreground="#0078d4"/>

                            <Grid Grid.Row="1" Margin="0,20,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Quick Access Cards -->
                                <Border Background="#f9f9f9" CornerRadius="10" Margin="0,0,10,10" Padding="20">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                            <Border Background="#e9eef6" Width="36" Height="36" CornerRadius="18">
                                                <TextBlock Text="&#xE8A1;" FontFamily="Segoe MDL2 Assets" FontSize="18" 
                                                        Foreground="#0078d4" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Text="Recent Orders" FontSize="16" FontWeight="SemiBold" 
                                                      Foreground="#333333" VerticalAlignment="Center" Margin="12,0,0,0"/>
                                        </StackPanel>

                                        <TextBlock Text="No recent orders found" FontSize="13" Foreground="#777777"/>

                                        <Button Style="{StaticResource Win11ActionButtonStyle}" Content="Create New Order" 
                                                HorizontalAlignment="Left" Margin="0,15,0,0" Click="btnOrder_Click"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="1" Background="#f9f9f9" CornerRadius="10" Margin="10,0,0,10" Padding="20">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                            <Border Background="#e9eef6" Width="36" Height="36" CornerRadius="18">
                                                <TextBlock Text="&#xE716;" FontFamily="Segoe MDL2 Assets" FontSize="18" 
                                                        Foreground="#0078d4" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Text="Customers" FontSize="16" FontWeight="SemiBold" 
                                                      Foreground="#333333" VerticalAlignment="Center" Margin="12,0,0,0"/>
                                        </StackPanel>

                                        <TextBlock Text="Manage your customer information" FontSize="13" Foreground="#777777"/>

                                        <Button Style="{StaticResource Win11ActionButtonStyle}" Content="View Customers" 
                                                HorizontalAlignment="Left" Margin="0,15,0,0" Click="btnCustomer_Click"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Row="1" Background="#f9f9f9" CornerRadius="10" Margin="0,10,10,0" Padding="20">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                            <Border Background="#e9eef6" Width="36" Height="36" CornerRadius="18">
                                                <TextBlock Text="&#xE9F3;" FontFamily="Segoe MDL2 Assets" FontSize="18" 
                                                        Foreground="#0078d4" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Text="Batch Operations" FontSize="16" FontWeight="SemiBold" 
                                                      Foreground="#333333" VerticalAlignment="Center" Margin="12,0,0,0"/>
                                        </StackPanel>

                                        <TextBlock Text="Monitor and manage batch production" FontSize="13" Foreground="#777777"/>

                                        <Button Style="{StaticResource Win11ActionButtonStyle}" Content="View Batches" 
                                                HorizontalAlignment="Left" Margin="0,15,0,0" Click="btnBatch_Click"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Row="1" Grid.Column="1" Background="#f9f9f9" CornerRadius="10" Margin="10,10,0,0" Padding="20">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                            <Border Background="#e9eef6" Width="36" Height="36" CornerRadius="18">
                                                <TextBlock Text="&#xE9D9;" FontFamily="Segoe MDL2 Assets" FontSize="18" 
                                                        Foreground="#0078d4" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Text="Recipe Templates" FontSize="16" FontWeight="SemiBold" 
                                                      Foreground="#333333" VerticalAlignment="Center" Margin="12,0,0,0"/>
                                        </StackPanel>

                                        <TextBlock Text="Create and manage concrete recipes" FontSize="13" Foreground="#777777"/>

                                        <Button Style="{StaticResource Win11ActionButtonStyle}" Content="View Recipes" 
                                                HorizontalAlignment="Left" Margin="0,15,0,0" Click="btnRecipe_Click"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>